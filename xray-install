#!/bin/bash
set -e  # –í—ã—Ö–æ–¥ –ø—Ä–∏ –ø–µ—Ä–≤–æ–π –æ—à–∏–±–∫–µ

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø—Ä–∞–≤ —Å—É–ø–µ—Ä–ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
if [[ $EUID -ne 0 ]]; then
  echo "–≠—Ç–æ—Ç —Å–∫—Ä–∏–ø—Ç –¥–æ–ª–∂–µ–Ω –∑–∞–ø—É—Å–∫–∞—Ç—å—Å—è –æ—Ç –∏–º–µ–Ω–∏ root (sudo)"
  exit 1
fi

# –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—É—â–µ—Å—Ç–≤–æ–≤–∞–Ω–∏—è –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏
if [ -f /usr/local/etc/xray/.keys ] || [ -f /usr/local/etc/xray/config.json ]; then
  echo "‚ö†Ô∏è –û–±–Ω–∞—Ä—É–∂–µ–Ω–∞ —Å—É—â–µ—Å—Ç–≤—É—é—â–∞—è –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è Xray!"
  read -p "–ü–µ—Ä–µ—Å–æ–∑–¥–∞—Ç—å –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—é? –í—Å–µ —Ç–µ–∫—É—â–∏–µ –∫–ª–∏–µ–Ω—Ç—ã –±—É–¥—É—Ç —É–¥–∞–ª–µ–Ω—ã! (y/N): " -n 1 -r
  echo
  [[ ! $REPLY =~ ^[Yy]$ ]] && echo "–£—Å—Ç–∞–Ω–æ–≤–∫–∞ –æ—Ç–º–µ–Ω–µ–Ω–∞." && exit 1
fi

# –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å–∏—Å—Ç–µ–º—ã –∏ —É—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π
apt update
apt install -y qrencode curl jq openssl

# –í–∫–ª—é—á–∞–µ–º BBR (–±–æ–ª–µ–µ –Ω–∞–¥—ë–∂–Ω–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞)
if ! sysctl net.ipv4.tcp_congestion_control | grep -q "bbr"; then
  echo "net.core.default_qdisc=fq" >> /etc/sysctl.conf
  echo "net.ipv4.tcp_congestion_control=bbr" >> /etc/sysctl.conf
  sysctl -p >/dev/null 2>&1
  echo "‚úÖ BBR –≤–∫–ª—é—á—ë–Ω"
else
  echo "‚úÖ BBR —É–∂–µ –≤–∫–ª—é—á—ë–Ω"
fi

# –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º Xray
echo "üì• –£—Å—Ç–∞–Ω–æ–≤–∫–∞ Xray-core..."
bash -c "$(curl -4 -L https://github.com/XTLS/Xray-install/raw/main/install-release.sh)" @ install

# –ü—Ä–æ–≤–µ—Ä–∫–∞ —É—Å—Ç–∞–Ω–æ–≤–∫–∏ Xray
if ! command -v xray &> /dev/null; then
  echo "‚ùå –û—à–∏–±–∫–∞: Xray –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω"
  exit 1
fi

# –°–æ–∑–¥–∞—ë–º –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ (–Ω–∞ —Å–ª—É—á–∞–π –µ—Å–ª–∏ –µ—ë –Ω–µ—Ç)
mkdir -p /usr/local/etc/xray

# –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º –∫–ª—é—á–∏
echo "üîë –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –∫–ª—é—á–µ–π REALITY..."
rm -f /usr/local/etc/xray/.keys
touch /usr/local/etc/xray/.keys
chmod 600 /usr/local/etc/xray/.keys  # –ö–†–ò–¢–ò–ß–ï–°–ö–ò –í–ê–ñ–ù–û: –∑–∞—â–∏—Ç–∞ –ø—Ä–∏–≤–∞—Ç–Ω–æ–≥–æ –∫–ª—é—á–∞

uuid=$(xray uuid)
x25519_output=$(xray x25519)
privatkey=$(echo "$x25519_output" | awk '/Private key/ {print $3}')
publickey=$(echo "$x25519_output" | awk '/Public key/ {print $3}')
shortsid=$(openssl rand -hex 8)

echo "uuid: $uuid" >> /usr/local/etc/xray/.keys
echo "Private key: $privatkey" >> /usr/local/etc/xray/.keys
echo "Public key: $publickey" >> /usr/local/etc/xray/.keys
echo "shortsid: $shortsid" >> /usr/local/etc/xray/.keys

# –°–æ–∑–¥–∞—ë–º –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—é
echo "‚öôÔ∏è –°–æ–∑–¥–∞–Ω–∏–µ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏..."
cat << EOF > /usr/local/etc/xray/config.json
{
  "log": {
    "loglevel": "warning"
  },
  "routing": {
    "domainStrategy": "IPIfNonMatch",
    "rules": [
      {
        "type": "field",
        "domain": [
          "geosite:category-ads-all"
        ],
        "outboundTag": "block"
      },
      {
        "type": "field",
        "ip": [
          "geoip:cn"
        ],
        "outboundTag": "block"
      }
    ]
  },
  "inbounds": [
    {
      "listen": "0.0.0.0",
      "port": 443,
      "protocol": "vless",
      "settings": {
        "clients": [
          {
            "email": "main",
            "id": "$uuid",
            "flow": "xtls-rprx-vision"
          }
        ],
        "decryption": "none"
      },
      "streamSettings": {
        "network": "tcp",
        "security": "reality",
        "realitySettings": {
          "show": false,
          "dest": "github.com:443",
          "xver": 0,
          "serverNames": [
            "github.com",
            "www.github.com"
          ],
          "privateKey": "$privatkey",
          "minClientVer": "",
          "maxClientVer": "",
          "maxTimeDiff": 0,
          "shortIds": [
            "$shortsid"
          ]
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
          "tls"
        ]
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom",
      "tag": "direct"
    },
    {
      "protocol": "blackhole",
      "tag": "block"
    }
  ],
  "policy": {
    "levels": {
      "0": {
        "handshake": 3,
        "connIdle": 180
      }
    }
  }
}
EOF

# –í–∞–ª–∏–¥–∞—Ü–∏—è –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ –ø–µ—Ä–µ–¥ –ø—Ä–∏–º–µ–Ω–µ–Ω–∏–µ–º
if ! xray validate --config /usr/local/etc/xray/config.json >/dev/null 2>&1; then
  echo "‚ùå –û—à–∏–±–∫–∞: –Ω–µ–≤–∞–ª–∏–¥–Ω–∞—è –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è Xray"
  exit 1
fi

# –°–æ–∑–¥–∞—ë–º —É—Ç–∏–ª–∏—Ç—ã —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è
echo "üõ†Ô∏è –°–æ–∑–¥–∞–Ω–∏–µ —É—Ç–∏–ª–∏—Ç —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è..."

# userlist
cat << 'EOF' > /usr/local/bin/userlist
#!/bin/bash
set -e
config="/usr/local/etc/xray/config.json"
if [[ ! -f "$config" ]]; then
  echo "‚ùå –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω–∞: $config"
  exit 1
fi
emails=($(jq -r '.inbounds[0].settings.clients[].email' "$config" 2>/dev/null || echo ""))
if [[ ${#emails[@]} -eq 0 ]]; then
  echo "–°–ø–∏—Å–æ–∫ –∫–ª–∏–µ–Ω—Ç–æ–≤ –ø—É—Å—Ç"
  exit 1
fi
echo "–°–ø–∏—Å–æ–∫ –∫–ª–∏–µ–Ω—Ç–æ–≤:"
for i in "${!emails[@]}"; do
  echo "$((i+1)). ${emails[$i]}"
done
EOF
chmod +x /usr/local/bin/userlist

# mainuser
cat << 'EOF' > /usr/local/bin/mainuser
#!/bin/bash
set -e
config="/usr/local/etc/xray/config.json"
keys="/usr/local/etc/xray/.keys"
if [[ ! -f "$config" ]] || [[ ! -f "$keys" ]]; then
  echo "‚ùå –û—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ —Ñ–∞–π–ª—ã –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏"
  exit 1
fi
protocol=$(jq -r '.inbounds[0].protocol' "$config")
port=$(jq -r '.inbounds[0].port' "$config")
uuid=$(awk -F': ' '/^uuid/ {print $2}' "$keys")
pbk=$(awk -F': ' '/^Public key/ {print $2}' "$keys")
sid=$(awk -F': ' '/^shortsid/ {print $2}' "$keys")
sni=$(jq -r '.inbounds[0].streamSettings.realitySettings.serverNames[0]' "$config")
ip=$(timeout 3 curl -4 -s icanhazip.com 2>/dev/null || timeout 3 curl -4 -s api.ipify.org 2>/dev/null || echo "YOUR_IP")
link="$protocol://$uuid@$ip:$port?security=reality&sni=$sni&fp=firefox&pbk=$pbk&sid=$sid&spx=/&type=tcp&flow=xtls-rprx-vision&encryption=none#vless-$ip"
echo ""
echo "üîó –°—Å—ã–ª–∫–∞ –¥–ª—è –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è:"
echo "$link"
echo ""
echo "üì± QR-–∫–æ–¥:"
echo "$link" | qrencode -t ansiutf8
EOF
chmod +x /usr/local/bin/mainuser

# newuser
cat << 'EOF' > /usr/local/bin/newuser
#!/bin/bash
set -e
config="/usr/local/etc/xray/config.json"
keys="/usr/local/etc/xray/.keys"
if [[ ! -f "$config" ]] || [[ ! -f "$keys" ]]; then
  echo "‚ùå –û—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ —Ñ–∞–π–ª—ã –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏"
  exit 1
fi
read -p "–í–≤–µ–¥–∏—Ç–µ –∏–º—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è (email): " email
if [[ -z "$email" || "$email" == *" "* ]]; then
  echo "‚ùå –ò–º—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –ø—É—Å—Ç—ã–º –∏–ª–∏ —Å–æ–¥–µ—Ä–∂–∞—Ç—å –ø—Ä–æ–±–µ–ª—ã"
  exit 1
fi
if jq -e --arg email "$email" '.inbounds[0].settings.clients[] | select(.email == $email)' "$config" >/dev/null 2>&1; then
  echo "‚ùå –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —Å —Ç–∞–∫–∏–º –∏–º–µ–Ω–µ–º —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç"
  exit 1
fi
uuid=$(xray uuid)
jq --arg email "$email" --arg uuid "$uuid" '.inbounds[0].settings.clients += [{"email": $email, "id": $uuid, "flow": "xtls-rprx-vision"}]' "$config" > tmp.json && mv tmp.json "$config"
systemctl restart xray >/dev/null 2>&1
index=$(jq --arg email "$email" '.inbounds[0].settings.clients | to_entries[] | select(.value.email == $email) | .key' "$config")
protocol=$(jq -r '.inbounds[0].protocol' "$config")
port=$(jq -r '.inbounds[0].port' "$config")
uuid=$(jq --argjson index "$index" -r '.inbounds[0].settings.clients[$index].id' "$config")
pbk=$(awk -F': ' '/^Public key/ {print $2}' "$keys")
sid=$(awk -F': ' '/^shortsid/ {print $2}' "$keys")
username=$(jq --argjson index "$index" -r '.inbounds[0].settings.clients[$index].email' "$config")
sni=$(jq -r '.inbounds[0].streamSettings.realitySettings.serverNames[0]' "$config")
ip=$(timeout 3 curl -4 -s icanhazip.com 2>/dev/null || timeout 3 curl -4 -s api.ipify.org 2>/dev/null || echo "YOUR_IP")
link="$protocol://$uuid@$ip:$port?security=reality&sni=$sni&fp=firefox&pbk=$pbk&sid=$sid&spx=/&type=tcp&flow=xtls-rprx-vision&encryption=none#$username"
echo ""
echo "‚úÖ –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å '$username' —Å–æ–∑–¥–∞–Ω"
echo ""
echo "üîó –°—Å—ã–ª–∫–∞ –¥–ª—è –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è:"
echo "$link"
echo ""
echo "üì± QR-–∫–æ–¥:"
echo "$link" | qrencode -t ansiutf8
EOF
chmod +x /usr/local/bin/newuser

# rmuser (–ò–°–ü–†–ê–í–õ–ï–ù–û: –¥–æ–±–∞–≤–ª–µ–Ω shebang)
cat << 'EOF' > /usr/local/bin/rmuser
#!/bin/bash
set -e
config="/usr/local/etc/xray/config.json"
if [[ ! -f "$config" ]]; then
  echo "‚ùå –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω–∞: $config"
  exit 1
fi
emails=($(jq -r '.inbounds[0].settings.clients[].email' "$config" 2>/dev/null || echo ""))
if [[ ${#emails[@]} -eq 0 ]]; then
  echo "–ù–µ—Ç –∫–ª–∏–µ–Ω—Ç–æ–≤ –¥–ª—è —É–¥–∞–ª–µ–Ω–∏—è."
  exit 1
fi
echo "–°–ø–∏—Å–æ–∫ –∫–ª–∏–µ–Ω—Ç–æ–≤:"
for i in "${!emails[@]}"; do
  echo "$((i+1)). ${emails[$i]}"
done
read -p "–í–≤–µ–¥–∏—Ç–µ –Ω–æ–º–µ—Ä –∫–ª–∏–µ–Ω—Ç–∞ –¥–ª—è —É–¥–∞–ª–µ–Ω–∏—è: " choice
if ! [[ "$choice" =~ ^[0-9]+$ ]] || (( choice < 1 || choice > ${#emails[@]} )); then
  echo "‚ùå –û—à–∏–±–∫–∞: –Ω–æ–º–µ—Ä –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –æ—Ç 1 –¥–æ ${#emails[@]}"
  exit 1
fi
selected_email="${emails[$((choice - 1))]}"
jq --arg email "$selected_email" '(.inbounds[0].settings.clients) |= map(select(.email != $email))' "$config" > tmp && mv tmp "$config"
systemctl restart xray >/dev/null 2>&1
echo "‚úÖ –ö–ª–∏–µ–Ω—Ç '$selected_email' —É–¥–∞–ª—ë–Ω."
EOF
chmod +x /usr/local/bin/rmuser

# sharelink
cat << 'EOF' > /usr/local/bin/sharelink
#!/bin/bash
set -e
config="/usr/local/etc/xray/config.json"
keys="/usr/local/etc/xray/.keys"
if [[ ! -f "$config" ]] || [[ ! -f "$keys" ]]; then
  echo "‚ùå –û—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ —Ñ–∞–π–ª—ã –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏"
  exit 1
fi
emails=($(jq -r '.inbounds[0].settings.clients[].email' "$config" 2>/dev/null || echo ""))
if [[ ${#emails[@]} -eq 0 ]]; then
  echo "–°–ø–∏—Å–æ–∫ –∫–ª–∏–µ–Ω—Ç–æ–≤ –ø—É—Å—Ç"
  exit 1
fi
echo "–°–ø–∏—Å–æ–∫ –∫–ª–∏–µ–Ω—Ç–æ–≤:"
for i in "${!emails[@]}"; do
  echo "$((i + 1)). ${emails[$i]}"
done
read -p "–í—ã–±–µ—Ä–∏—Ç–µ –∫–ª–∏–µ–Ω—Ç–∞: " client
if ! [[ "$client" =~ ^[0-9]+$ ]] || (( client < 1 || client > ${#emails[@]} )); then
  echo "‚ùå –û—à–∏–±–∫–∞: –Ω–æ–º–µ—Ä –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –æ—Ç 1 –¥–æ ${#emails[@]}"
  exit 1
fi
selected_email="${emails[$((client - 1))]}"
index=$(jq --arg email "$selected_email" '.inbounds[0].settings.clients | to_entries[] | select(.value.email == $email) | .key' "$config")
protocol=$(jq -r '.inbounds[0].protocol' "$config")
port=$(jq -r '.inbounds[0].port' "$config")
uuid=$(jq --argjson index "$index" -r '.inbounds[0].settings.clients[$index].id' "$config")
pbk=$(awk -F': ' '/^Public key/ {print $2}' "$keys")
sid=$(awk -F': ' '/^shortsid/ {print $2}' "$keys")
username=$(jq --argjson index "$index" -r '.inbounds[0].settings.clients[$index].email' "$config")
sni=$(jq -r '.inbounds[0].streamSettings.realitySettings.serverNames[0]' "$config")
ip=$(timeout 3 curl -4 -s icanhazip.com 2>/dev/null || timeout 3 curl -4 -s api.ipify.org 2>/dev/null || echo "YOUR_IP")
link="$protocol://$uuid@$ip:$port?security=reality&sni=$sni&fp=firefox&pbk=$pbk&sid=$sid&spx=/&type=tcp&flow=xtls-rprx-vision&encryption=none#$username"
echo ""
echo "üîó –°—Å—ã–ª–∫–∞ –¥–ª—è –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è:"
echo "$link"
echo ""
echo "üì± QR-–∫–æ–¥:"
echo "$link" | qrencode -t ansiutf8
EOF
chmod +x /usr/local/bin/sharelink

# –ü–µ—Ä–µ–∑–∞–ø—É—Å–∫ —Å–µ—Ä–≤–∏—Å–∞
echo "üîÑ –ü–µ—Ä–µ–∑–∞–ø—É—Å–∫ Xray..."
systemctl daemon-reload
if ! systemctl restart xray; then
  echo "‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–ø—É—Å–∫–µ —Å–µ—Ä–≤–∏—Å–∞ Xray"
  echo "–ü—Ä–æ–≤–µ—Ä—å—Ç–µ –ª–æ–≥–∏: journalctl -u xray -n 50"
  exit 1
fi

# –§–∏–Ω–∞–ª—å–Ω—ã–π –≤—ã–≤–æ–¥
echo ""
echo "üéâ Xray-core —É—Å–ø–µ—à–Ω–æ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω –∏ –Ω–∞—Å—Ç—Ä–æ–µ–Ω!"
echo ""
echo "üîë –û—Å–Ω–æ–≤–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã –≤: /usr/local/etc/xray/.keys (–ø—Ä–∞–≤–∞ 600)"
echo ""
mainuser

# –°–æ–∑–¥–∞—ë–º —Ñ–∞–π–ª —Å –ø–æ–¥—Å–∫–∞–∑–∫–∞–º–∏
cat << 'EOF' > $HOME/help
–ö–æ–º–∞–Ω–¥—ã –¥–ª—è —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è–º–∏ Xray:
  mainuser   - –≤—ã–≤–æ–¥–∏—Ç —Å—Å—ã–ª–∫—É –æ—Å–Ω–æ–≤–Ω–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
  newuser    - —Å–æ–∑–¥–∞—ë—Ç –Ω–æ–≤–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
  rmuser     - —É–¥–∞–ª—è–µ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
  sharelink  - –ø–æ–∫–∞–∑—ã–≤–∞–µ—Ç —Å–ø–∏—Å–æ–∫ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π –∏ –≥–µ–Ω–µ—Ä–∏—Ä—É–µ—Ç —Å—Å—ã–ª–∫—É
  userlist   - –≤—ã–≤–æ–¥–∏—Ç —Å–ø–∏—Å–æ–∫ –≤—Å–µ—Ö –∫–ª–∏–µ–Ω—Ç–æ–≤

–§–∞–π–ª—ã:
  –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è: /usr/local/etc/xray/config.json
  –ö–ª—é—á–∏:        /usr/local/etc/xray/.keys (chmod 600)

–ö–æ–º–∞–Ω–¥—ã —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è:
  systemctl restart xray  - –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫ —Å–µ—Ä–≤–∏—Å–∞
  systemctl status xray   - –ø—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–∞—Ç—É—Å–∞
  journalctl -u xray -f   - –ø—Ä–æ—Å–º–æ—Ç—Ä –ª–æ–≥–æ–≤ –≤ —Ä–µ–∞–ª—å–Ω–æ–º –≤—Ä–µ–º–µ–Ω–∏

‚ö†Ô∏è –í–ê–ñ–ù–û: –§–∞–π–ª .keys —Å–æ–¥–µ—Ä–∂–∏—Ç –ø—Ä–∏–≤–∞—Ç–Ω—ã–π –∫–ª—é—á REALITY. –ù–∏–∫–æ–º—É –Ω–µ –ø–µ—Ä–µ–¥–∞–≤–∞–π—Ç–µ –µ–≥–æ!
EOF

